#:import main mainGUI
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

#:set default_font_size "24sp"
#:set default_font_name "Arial"

<defaultScreen>:
    size:(480,800)
    FloatLayout:
        id: defaultScreenLayout
        
        Button:
            text: 'Back'
            on_release: 
                root.manager.transition = SlideTransition(direction='up')
                root.manager.current = 'main'
            size_hint: (.1,.1)
            pos_hint:{'x':0,'y':0.9}
            
        Label:
            text:'Temperature'
            font_size: default_font_size
            pos:(-275, 150)
        Label:
            text: 'Day'
            font_size: default_font_size
            pos:(0,175)
        Label:
            text: 'Label2'
            font_size: default_font_size
            pos:(275,150)
        Label:
            text: 'Label3'
            font_size: default_font_size
            pos:(-275,-50)      
        Label:
            text: 'Label5'
            font_size: default_font_size
            pos:(275,-50)    
        BoxLayout:
            size_hint:(.5,.5)
            pos:(200,75)

<optionScreen>:
    size:(480,800)
    FloatLayout:
        id: optionScreenLayout
        
        Button:
            text: 'Back'
            on_release: 
                root.manager.transition = SlideTransition(direction='left')
                root.manager.current = 'main'
            size_hint: (.1,.1)
            pos_hint:{'x':0,'y':0.9}          
                
<mainScreen>:
    FloatLayout:
        id: mainScreenLayout

        Button:
            text: 'To Default'
            on_release: 
                root.manager.transition = SlideTransition(direction='down')
                root.manager.current = 'default'
            size_hint: (.25,.25)
            pos:(100,300)
        Button:
            text: "Options"
            on_release:
                root.manager.transition = SlideTransition(direction='right')
                root.manager.current = 'option'
            size_hint: (.25,.25)
            pos:(100,100)
