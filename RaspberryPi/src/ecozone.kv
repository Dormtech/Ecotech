#:import main mainGUI
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

#:set default_font_size "52sp"
#:set default_font_name "Arial"
#:set default_button_font_size "20sp"

#Custom Buttons

<upButton@Button>:
    size_hint:(.1,.1)
    background_normal:'upColour.png'

<downButton@Button>:
    size_hint:(.1,.1)
    background_normal:'downColour.png'

<defaultScreen>:
    size:(480,800)
    FloatLayout:
        size:(480,800)
        id: defaultScreenLayout

        Button:
            text: 'Back'
            on_release:
                root.manager.transition = SlideTransition(direction='up')
                root.manager.current = 'main'
            size_hint: (.1,.1)
            pos_hint:{'x':0,'y':0.9}
            font_size: default_button_font_size


        Label:
            text: root.strainVar
            pos_hint:{'x':0,'y':-0.45}

        Label:
            text:'Temperature'
            font_size: default_font_size
            pos:(-230, 150)
        Label:
            text:root.temperatureVar
            font_size: "48sp"
            pos:(-230,80)
        Label:
            text:root.tempSp
            font_size:"36sp"
            pos:(-230, 15)
        upButton:
            pos:(65,225)
            on_release:
                root.tempSp=str(int(root.tempSp)+1)
        downButton:
            pos:(195,225)
            on_release:
                root.tempSp=str(int(root.tempSp)-1)


        Label:
            text: 'Humidity'
            font_size: default_font_size
            pos:(230,150)
        Label:
            text:root.humidityVar
            font_size: "48sp"
            pos:(230,80)
        Label:
            text:root.humiditySp
            font_size:"36sp"
            pos:(230,15)
        upButton:
            pos:(525,225)
            on_release:
                root.humiditySp=str(int(root.humiditySp)+1)
        downButton:
            pos:(655,225)
            on_release:
                root.humiditySp=str(int(root.humiditySp)-1)


        Label:
            text: 'pH'
            font_size: default_font_size
            pos:(230,-75)
        Label:
            text:root.pHVar
            font_size:"48sp"
            pos:(230,-145)


        Label:
            text: 'CO2'
            font_size: default_font_size
            pos:(-230,-75)
        Label:
            text:root.CO2Var
            pos:(-230,-145)
            font_size:"48sp"


        Label:
            text: 'Day'
            font_size: '65sp'
            pos:(0,160)
        Label:
            text:root.dayVar
            pos:(0,110)
            font_size: '55sp'

        Button:
            id:capture
            text:"Capture Image"
            size_hint:(.25,.1)
            pos_hint:{'x':.375,'y':.9}
            pos_x: 0
            on_release:
                root.takePicture()
            font_size: default_button_font_size

<mainScreen>:

    FloatLayout:
        id: mainScreenLayout

        canvas.before:
            Color:
                rgba: root.rgba
            Rectangle:
                pos:self.pos
                size:self.size

        Button:
            text: 'To Default'
            on_release:
                root.manager.transition = SlideTransition(direction='down')
                root.manager.current = 'default'
            size_hint: (.25,.25)
            pos:(100,300)
            font_size: default_button_font_size
        Button:
            text: "Options"
            on_release:
                root.manager.transition = SlideTransition(direction='right')
                app.open_settings()
            size_hint: (.25,.25)
            pos:(100,100)
            font_size: default_button_font_size

        Button:
            text: 'Exit'
            on_release:
                quit()
            size_hint: (.1,.1)
            pos_hint:{'x':0,'y':0.9}
            font_size: default_button_font_size

<openingScreen>

    Button:
        text: 'To Default'
        on_release:
            root.manager.transition = SlideTransition(direction='down')
            root.manager.current = 'default'
        size_hint: (.25,.25)
        pos:(100,300)
        font_size: default_button_font_size
