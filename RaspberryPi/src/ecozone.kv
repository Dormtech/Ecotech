#:import main mainGUI
#:import SlideTransition kivy.uix.screenmanager.SlideTransition

#:set default_font_size "24sp"
#:set default_font_name "Arial"

<defaultScreen>:
    size:(480,800)
    FloatLayout:
        size:(480,800)
        id: defaultScreenLayout

        Button:
            text: 'Back'
            on_release:
                root.manager.transition = SlideTransition(direction='up')
                root.manager.current = 'main'
            size_hint: (.1,.1)
            pos_hint:{'x':0,'y':0.9}


        Label:
            text: root.strainVar
            pos_hint:{'x':0,'y':-0.45}

        Label:
            text:'Temperature'
            font_size: default_font_size
            pos:(-275, 150)
        Label:
            text:root.temperatureVar
            pos:(-275,100)


        Label:
            text: 'Humidity'
            font_size: default_font_size
            pos:(275,150)
        Label:
            text:root.humidityVar
            pos:(275,100)


        Label:
            text: 'pH'
            font_size: default_font_size
            pos:(275,-50)
        Label:
            text:root.pHVar
            pos:(275,-100)


        Label:
            text: 'CO2'
            font_size: default_font_size
            pos:(-275,-50)
        Label:
            text:root.CO2Var
            pos:(-275,-100)


        Label:
            text: 'Day'
            font_size: '55'
            pos:(0,170)
        Label:
            text:root.dayVar
            pos:(0,120)
            font_size: '55'

        Button:
            id:capture
            text:"Capture Image"
            size_hint:(.25,.1)
            pos_hint:{'x':.375,'y':.9}
            pos_x: 0
            on_release:
                root.takePicture()

<mainScreen>:

    FloatLayout:
        id: mainScreenLayout

        canvas.before:
            Color:
                rgba: root.rgba
            Rectangle:
                pos:self.pos
                size:self.size

        Button:
            text: 'To Default'
            on_release:
                root.manager.transition = SlideTransition(direction='down')
                root.manager.current = 'default'
            size_hint: (.25,.25)
            pos:(100,300)
        Button:
            text: "Options"
            on_release:
                root.manager.transition = SlideTransition(direction='right')
                app.open_settings()
            size_hint: (.25,.25)
            pos:(100,100)

        Button:
            text: 'Exit'
            on_release:
                quit()
            size_hint: (.1,.1)
            pos_hint:{'x':0,'y':0.9}

<openingScreen>

    Button:
        text: 'To Default'
        on_release:
            root.manager.transition = SlideTransition(direction='down')
            root.manager.current = 'default'
        size_hint: (.25,.25)
        pos:(100,300)
